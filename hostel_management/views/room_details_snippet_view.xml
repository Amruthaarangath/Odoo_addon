<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="room_details" name="Room Details">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="col-md-12">
                    <center><h3>Available Room</h3></center>
                    <table class="table report_border table-hover table-striped">
                        <td style="min-width: 100px;">
                        <thead>
                            <tr>
                                <th style="padding: 0px;" class="text-center">
                                    <h5>
                                        <b>Room Number</b>
                                    </h5>
                                </th>
                                <th style="padding: 0px;" class="text-center">
                                    <h5>
                                        <b>Rent</b>
                                    </h5>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="text-left">
                            <tr>
                                <td>
                                    <span t-esc="room_id.room_number"/>
                                </td>
                                <td>
                                    <span t-out="room_id.total_rent"/>
                                </td>
                            </tr>
                        </tbody>
                        </td>
                    </table>
                </div>
            </div>
        </t>
    </template>
</odoo>
